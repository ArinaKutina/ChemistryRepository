<Window x:Class="Chemistry.Views.AddTheme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chemistry.Views"
        mc:Ignorable="d"
        Title="Добавление темы" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <StackPanel>
            <TextBlock Text="Добавление новой темы:" Margin="30 30 0 0" FontSize="24" />
            <TextBlock Text="Название темы:" Margin="30 10 0 0" FontSize="24" />
            <TextBox x:Name="nameNewTheme" Width="1850" Height="35"/>
            <TextBlock Text="Содержание темы:" Margin="30 10 0 0" FontSize="24" />
            <TextBox x:Name="infoNewTheme" Width="1850" Height="677"/>

            <Button x:Name="SaveTheme" Content="Сохранить тему" FontSize="24" Height="60" Width="600" Margin="0 30 0 0" Click="SaveTheme_Click" />
            <Button x:Name="Back" Content="Назад" FontSize="24" Height="50" Width="400" Click="Back_Click" Margin="0 10 0 0" />
        </StackPanel>
    </Grid>
</Window>

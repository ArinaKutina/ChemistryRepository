<Window x:Class="Chemistry.Views.Theme1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chemistry.Views"
        mc:Ignorable="d"
        Title="Тема 1. Тела и вещества" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <DataGrid x:Name="Theme1Grid" Margin="0,0,0,192" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер темы" Binding="{Binding Path=idTheme}" FontSize="24"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Path=nameTheme}" FontSize="24"/>
                <DataGridTextColumn Header="Содержание темы" Binding="{Binding Path=infoTheme}" FontSize="17"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Margin="0,877,0,0">
            <Button x:Name="Back" Content="Вернуться к Темам" Width="600" Height="60" Margin="0 60 1200 0" FontSize="24" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Chemistry.Views.MyThemes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chemistry.Views"
        mc:Ignorable="d"
        Title="Мои темы" Height="1080" Width="1920" WindowState="Maximized">
    <Grid>
        <StackPanel>
            <TextBlock Text="Мои Темы" FontSize="24" Margin="30 0 0 0" />
            <DataGrid x:Name="MyThemesGrid" Margin="0 20 0 0" AutoGenerateColumns="False" Height="806">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Path=nameTheme}" FontSize="17"/>
                    <DataGridTextColumn Header="Содержание темы" Binding="{Binding Path=infoTheme}" FontSize="17"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="Back" Height="60" Width="609" Margin="0 90 1200 0" Content="Закрыть" FontSize="24" Click="Back_Click" />
        </StackPanel>
    </Grid>
</Window>
